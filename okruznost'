#include <stdio.h>            
int main()
{
  float (x);
  float (y);
 printf("Введите координаты точки");
scanf("%f", &x,&y);
if ((x<0.5)||(x*x+y*y>1)) printf("Точка не принадлежит области");
else {
 if ((x!=0.5)&&(x,y >= -1)&&(x,y <= 1))
   { 
    if ((x>0.5)&&(x*x+y*y<1)) printf("точка принадлежит области");
    else printf("точка не принадлежит области");
   }
else printf("точка лежит на границе");
};
 return 0;
}
